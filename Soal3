#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main() {
    system ("cls");
    char kartu[20];
    int i, panjang, digit, total = 0;

    printf("Masukkan nomor kartu digital: ");
    scanf("%s", kartu);

    panjang = strlen(kartu);

    if (panjang == 16 && (strncmp(kartu, "77", 2) == 0 || strncmp(kartu, "78", 2) == 0)) {
        printf("Tipe kartu: GARUDA\n");

        for (i = panjang - 2; i >= 0; i -= 2) {
            digit = (kartu[i] - '0') * 2;
            if (digit > 9) digit -= 9;
            total += digit;
        }
        for (i = panjang - 1; i >= 0; i -= 2) {
            total += (kartu[i] - '0');
        }

        if (total % 10 == 0) printf("Nomor kartu VALID.\n");
        else printf("Nomor kartu TIDAK VALID.\n");
    } else {
        printf("Nomor kartu tidak sesuai format kartu GARUDA.\n");
    }

    return 0;
}

/*
Penjelasan:
- Kartu GARUDA dicek berdasarkan awalan 77/78 dan panjang 16.
- Algoritma validasi sama: kelipatan digit dari belakang dikali 2, lalu validasi mod 10.
*/
